{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@test/(.*)$": ["<rootDir>/test/$1"],
      "@domain/(.*)$": ["<rootDir>/src/domain/$1"],
      "@use-cases/(.*)$": ["<rootDir>/src/use-cases/$1"],
      "@infra/(.*)$": ["<rootDir>/src/infra/$1"]
    }
  }